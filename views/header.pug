		script.
			var f = !{login};
			$(document).ready(function(){
				if(f){	//로그인 상태일 때
					$("#login").hide()
					$("#logout").show()
				}
				else{	//로그인 상태가 아닐 때
					$("#logout").hide()
					$("#login").show()
				}
			});
