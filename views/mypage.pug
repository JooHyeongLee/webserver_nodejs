#navbar
.container
  .row.main
    .panel-heading
      .panel-title.text-center
        h1.title 개인정보 수정
        hr
    .main-login.main-center
      form.form-horizontal(method='post', action='#')
        .form-group
          label.cols-sm-2.control-label(for='name') 이름
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#name.form-control(type='text', name='name', placeholder='Enter your Name')
        .form-group
          label.cols-sm-2.control-label(for='email') 이메일 
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa(aria-hidden='true')
              input#email.form-control(type='text', name='email', placeholder='Enter your Email', readonly)
        .form-group
          label.cols-sm-2.control-label(for='username') 닉네임
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-users.fa(aria-hidden='true')
              input#nickname.form-control(type='text', name='username', placeholder='Enter your Nickname')
        .form-group
          label.cols-sm-2.control-label(for='password') 비밀번호
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#password.form-control(type='password', name='password', placeholder='Enter your Password')
        .form-group
          label.cols-sm-2.control-label(for='confirm') 비밀번호 확인 
          .cols-sm-10
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#confirm.form-control(type='password', name='confirm', placeholder='Confirm your Password')
        .form-group
          button.btn.btn-primary.btn-lg.btn-block.login-button(type='button' onclick='modify()') 수정하기
script.
 $(document) .ready(function(){
  $('#navbar').load('http://localhost:3000/header') 
 });
 var info = !{data};
 document.getElementById('email').value=info.mId;
 document.getElementById('name').value=info.mName;
 document.getElementById('nickname').value=info.mNick;
 document.getElementById('password').value=info.mPwd;
 document.getElementById('confirm').value=info.mPwd;
 function modify(){
 var name = document.getElementById('name').value;
 var email = document.getElementById('email').value;
 var nickname = document.getElementById('nickname').value;
 var password = document.getElementById('password').value;
 var confirm = document.getElementById('confirm').value;

 var data = {'name':name, 'email':email,'nickname':nickname, 'password':password,'confirm':confirm};
 data = JSON.stringify(data);
 var xhr = new XMLHttpRequest();
 xhr.open('POST','http://14.63.194.152:3000/modifyInfo_receive',true);
 xhr.setRequestHeader('Content-type','application/json');
 xhr.send(data);
 
 xhr.addEventListener('load',function(){
 var result = JSON.parse(xhr.responseText);
 if(result.result !='ok'){
  if(result.flag=='1')
   alert('모든 정보를 입력해주세요.');
  else if(result.flag=='2')
   alert('비밀번호가 일치하지 않습니다.');
 }
 else{
  alert('수정 완료');
  location.href='/form';
 }
 });
 }
script(type='text/javascript', src='assets/js/bootstrap.js')

